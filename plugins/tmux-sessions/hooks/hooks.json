{
  "description": "tmux-sessions hooks â€” registers Claude sessions running in tmux and emits lifecycle events to ~/.claude/tmux-events/",
  "hooks": {
    "SessionStart": [
      { "hooks": [{ "type": "command", "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh", "timeout": 5 }] }
    ],
    "Stop": [
      { "hooks": [{ "type": "command", "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/stop.sh", "timeout": 5, "async": true }] }
    ],
    "PreToolUse": [
      { "matcher": "Write|Edit|Bash|NotebookEdit", "hooks": [{ "type": "command", "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-use.sh", "timeout": 5, "async": true }] }
    ],
    "Notification": [
      { "matcher": "permission_prompt", "hooks": [{ "type": "command", "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/permission-notify.sh", "timeout": 5, "async": true }] }
    ],
    "SessionEnd": [
      { "hooks": [{ "type": "command", "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-end.sh", "timeout": 5 }] }
    ]
  }
}
