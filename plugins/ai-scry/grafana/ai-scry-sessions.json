{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": true,
  "panels": [
    {
      "title": "Session Stats",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "Agents",
          "expr": "sum(count_over_time({service_name=\"ai-scry\", session_id=~\"$session_id\"} | json | event_type=\"agent_complete\" [$__range]))",
          "legendFormat": "Agents"
        },
        {
          "refId": "Tools",
          "expr": "sum(count_over_time({service_name=\"ai-scry\", session_id=~\"$session_id\"} | json | event_type=\"tool_start\" [$__range]))",
          "legendFormat": "Tools"
        },
        {
          "refId": "Errors",
          "expr": "sum(count_over_time({service_name=\"ai-scry\", session_id=~\"$session_id\"} | json | event_type=\"tool_error\" [$__range]))",
          "legendFormat": "Errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Errors" },
            "properties": [
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "tags": ["claude-code", "ai-scry", "sessions"],
  "templating": {
    "list": [
      {
        "name": "session_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({service_name=\"ai-scry\"}, session_id)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "current": { "text": "All", "value": "$__all" },
        "sort": 2,
        "label": "Session"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "AI Scry: Session Explorer",
  "uid": "ai-scry-sessions",
  "version": 1
}
